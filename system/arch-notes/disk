# Setting up disk
fdisk -l
fdisk /dev/sda
o
n p 1 "Enter" "Enter"
t 8e ("Linux LVM")
a
w

# Create LVM configuration
### create physical volume
pvcreate --dataalignment 1m /dev/sda1
### create volume group which is a namespace that will contain logical volume
vgcreate volgroup0 /dev/sda1
### create 2 logical volume
lvcreate -L 30GB volgroup0 -n lv_root
lvcreate -l 100%FREE volgroup0 -n lv_home
### lvm config is good to go, but with have to active it
modprobe dm_mod
vgscan
vgchange -ay
## Formatting logical volume
mkfs.ext4 /dev/volgroup0/lv_root
mount /dev/volgroup0/lv_root /mnt
mkfs.ext4 /dev/volgroup0/lv_home
mkdir /mnt/home
mount /dev/volgroup0/lv_home /mnt/home
mkdir /mnt/etc
genfstab -U -p /mnt >> /mnt/etc/fstab

