# installing all the base packages
pacstrap -i /mnt base

## configure installation
arch-chroot /mnt
pacman -S linux-lts linux-lts-headers
pacman -S linux linux-headers

# we are almost ready to go
pacman -S neovim
pacman -S base-devel openssh linux-firmware
# networking
pacman -S networkmanager wpa_supplicant wireless_tools netctl
pacman -S dialog
systemctl enable NetworkManager

# support lvm
pacman -S lvm2
nvim /etc/mkinitcpio.conf
# add lvm2 in the HOOKS section between block filesystem
mkinitcpio -p linux
mkinitcpio -p linux-lts

nvim /etc/locale.gen
# uncomment en_US.UTF-8 UTF-8
locale-gen
passwd
useradd -m -g users -G wheel pawel
passwd pawel
EDITOR=nvim visudo
# uncomment %wheel ALL=(ALL:ALL) ALL

